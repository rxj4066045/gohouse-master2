<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.gohouse.gohouse.ui.customView.ShapeImageView
        android:id="@+id/rec_header_construction"
        android:layout_width="162dp"
        android:layout_height="238dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:siv_radius="6dp"
        app:siv_shape="RoundRectangle" />


    <com.gohouse.gohouse.ui.customView.ShapeImageView
        android:id="@+id/rec_header_design"
        android:layout_width="162dp"
        android:layout_height="115dp"
        android:layout_marginStart="4dp"
        android:src="@mipmap/home"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/rec_header_construction"
        app:siv_radius="6dp"
        app:siv_shape="RoundRectangle" />

    <com.gohouse.gohouse.ui.customView.ShapeImageView
        android:id="@+id/rec_header_material"
        android:layout_width="162dp"
        android:layout_height="115dp"
        android:layout_marginStart="4dp"
        android:src="@mipmap/home"
        app:layout_constraintBottom_toBottomOf="@+id/rec_header_construction"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:siv_radius="6dp"
        app:siv_shape="RoundRectangle" />
    
</androidx.constraintlayout.widget.ConstraintLayout>