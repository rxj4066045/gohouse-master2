<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/orange_33">
    <item>
        <shape>
            <!-- 圆角 -->
            <corners
                android:radius="29dp"/><!-- 设置圆角半径 -->


            <!-- 间隔 -->
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/><!-- 各方向的间隔 -->


            <!-- 填充 -->
            <solid
                android:color="@color/white"/><!-- 填充的颜色 -->

            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@color/colorAccent"/>

        </shape>
    </item>
</ripple>

